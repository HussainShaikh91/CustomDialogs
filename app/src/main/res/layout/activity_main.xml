<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SnckBar"
        app:layout_constraintBottom_toTopOf="@+id/btn_dialog"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:text="Aleart Dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Aleart Dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dialog"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/btnCustomProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Progress Dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dialog1"
        app:layout_constraintVertical_bias="0.084"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnAnimatedProgressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animated Progress Bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomProgressDialog"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>